<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mz.co.malambe.splash.User_Interface"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/dp_user_interface">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_menu_black_24dp"
                android:background="#FF000000"
                android:padding="5dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_search_black_24dp"
                android:background="#FF000000"
                android:padding="5dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:background="#0F0F0F"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musicas"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_sound_black"
            android:drawablePadding="-20dp"
            android:backgroundTint="#fff"
            android:padding="16.5dp"
            android:onClick="btnMusicOnClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Albm's"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_album_black"
            android:drawablePadding="-20dp"
            android:backgroundTint="#fff"
            android:padding="16.5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_video_library_black_24dp"
            android:drawablePadding="-20dp"
            android:backgroundTint="#fff"
            android:padding="16.5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top 10"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_top100_black"
            android:drawablePadding="-20dp"
            android:backgroundTint="#fff"
            android:padding="16.5dp"
            android:onClick="btnTopOnclick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rec."
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_rec_black"
            android:drawablePadding="-20dp"
            android:backgroundTint="#fff"
            android:padding="16.5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F4A40">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#0F4A40"
            android:text="Sign Out"
            android:textColor="#fff"
            />
    </LinearLayout>

</LinearLayout>